{
  "title": "Clinical Trial Enrollment Form",
  "layout": "vertical",
  "fields": [
    {
      "name": "patientName",
      "label": "Patient Name",
      "type": "text",
      "placeholder": "Enter full name",
      "required": true,
      "validation": {
        "required": true,
        "pattern": "^[a-zA-Z\\s]+$",
        "min": "2",
        "max": "100"
      }
    },
    {
      "name": "dateOfBirth",
      "label": "Date of Birth",
      "type": "text",
      "placeholder": "MM/DD/YYYY",
      "required": true,
      "validation": {
        "required": true,
        "pattern": "^(0[1-9]|1[0-2])\\/(0[1-9]|[12][0-9]|3[01])\\/([12][0-9]{3})$"
      }
    },
    {
      "name": "emailAddress",
      "label": "Email Address",
      "type": "text",
      "placeholder": "Enter email",
      "required": true,
      "validation": {
        "required": true,
        "pattern": "^[\\w-\\.]+@([\\w-]+\\.)+[\\w-]{2,4}$"
      }
    },
    {
      "name": "phoneNumber",
      "label": "Phone Number",
      "type": "text",
      "placeholder": "Enter phone number",
      "required": true,
      "validation": {
        "required": true,
        "pattern": "^\\d{3}-\\d{3}-\\d{4}$"
      }
    },
    {
      "name": "consentAgreement",
      "label": "Consent Agreement",
      "type": "checkbox",
      "options": [
        "I have read and understand the consent form.",
        "I agree to participate in this clinical trial.",
        "I understand that I can withdraw at any time."
      ],
      "required": true,
      "validation": {
        "required": true
      }
    },
    {
      "name": "medicalHistory",
      "label": "Medical History Summary",
      "type": "textarea",
      "placeholder": "Describe your medical history",
      "required": true,
      "validation": {
        "required": true,
        "min": "10",
        "max": "500"
      }
    },
    {
      "name": "eligibleCondition",
      "label": "Do you have the condition being studied?",
      "type": "radio",
      "options": [
        "Yes",
        "No"
      ],
      "required": true,
      "validation": {
        "required": true
      }
    },
    {
      "name": "age",
      "label": "Age",
      "type": "number",
      "placeholder": "Enter your age",
      "required": true,
      "validation": {
        "required": true,
        "min": "18",
        "max": "120"
      }
    },
    {
      "name": "currentMedications",
      "label": "Current Medications",
      "type": "tags",
      "placeholder": "Add medications",
      "required": false,
      "validation": {
        "required": false
      }
    },
    {
      "name": "travelAvailability",
      "label": "Are you able to travel to the trial location?",
      "type": "select",
      "options": [
        "Yes",
        "No",
        "Maybe"
      ],
      "required": true,
      "validation": {
        "required": true
      }
    }
  ],
